{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make"
        },
        {
            "label": "build-debug",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make debug"
        },
        {
            "label": "build & run",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make; cd build/release && ./<PROJECT_NAME>"
        }
    ]
}